<html lang="en" dir="ltr">
<title>User Details</title>

  <head>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


  </head>
  <body>

<h1 style="text-align: center;">Users Details</h1>


<div>&nbsp;</div>
<%= link_to 'Download as Excel',  user_index_path(format: :xlsx) , :class=>"btn btn-success" %>
<div>&nbsp;</div>

<table class="table table-striped table-dark" style="border: 1px solid;width: 100%;height: auto;">
  <thead>
    <tr style="height: 45px;">
      <th scope="col">Sl No</th>
      <th scope="col">User Name</th>
      <th scope="col">User Email</th>
      <th scope="col">User Role</th>
      <th scope="col">User DOB</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
<% i=1 %>

<% @user .each do |user| %>
    <tr style="border: 1px solid;">
      <td><%= i  %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.user_role %></td>
      <td><%= user.dob %></td>
      <td>
        <%= link_to 'Show', user,style: "text-decoration:none; border:1px; background-color:green; padding:8px; color:white" %>&nbsp;
        <%= link_to 'Edit', edit_user_path(user),style:  "text-decoration:none; border:1px; background-color:royalblue; padding:8px; color:white" %>&nbsp;
        <a href="/user/<%= user.id %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow" class="btn btn-danger">Destroy</a>
      
      </td> 

    </tr>
    <%  i=i+1 %>
<% end %>


</tbody>
</table>

<a href="new/" class="btn btn-primary" >Add new User</a>
&nbsp;
<a href="/" class="btn btn-success">Back to Home</a>

</body>
</html>